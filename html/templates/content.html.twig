{% extends 'base.html.twig' %}

{% block body %}

<div class="h-auto container mt-4">
    <div class="row">
        <div class="col-sm-5">
            <div class="card mb-2">
                <div class="card-body">

                    <div class="input-group input-group-md mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button" id="edit-cupo"><i class="far fa-edit"></i></button>
                        </div>
                        <input type="text" class="form-control card-title border-0" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1" readonly>
                    </div>
                    
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="cupo-text">Cupo</span>
                        </div>
                        <input type="number" min="1" max="999" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="cupo-text" readonly>
                    </div>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="fecha-text">Fecha</span>
                        </div>
                        <input type="date" class="form-control" placeholder="" aria-label="Example text with button addon" aria-describedby="fecha-text" readonly>
                    </div>

                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="fecha-text">Tipo de tour</span>
                        </div>
                        <select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="d-inline card-title">Rutas</h5>
                    <a href="#" class="d-inline btn btn-primary btn-sm">AÃ±adir tour</a>
                    <div class="list-group overflow-auto mt-3" id="list-tab" style="height: 200px" role="tablist">
                        {% for x in range(0,1) %}
                            {% include 'ruta.html.twig' with {'nombre': x} %}
                        {% endfor %}
                    </div>
                </div>   
            </div>
        </div>

        <div class="col">
            <div class="card ">
                <div class="card-body">
                    <div class="tab-content" id="panel-rutas">
                        {% include 'ruta-descripcion.html.twig' with {'paises': paises} %}
                    </div>
                    {{ debug }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
